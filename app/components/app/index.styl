*,
*:before,
*:after
  box-sizing border-box
  outline 0

body
	margin 0
	font-family 'Helvetica Neue', Helvetica, STHeiTi, 'Microsoft Yahei', Tahoma, sans-serif
	font-size 20px
	color #333
	background linear-gradient(to bottom, lightblue 0%, #fcfcfc 10%) no-repeat
	height 100vh
	overflow hidden

input
	font-size 18px
	padding 3px 8px
	width 90%
	color #333
	border 1px solid #ddd

ul, li
	margin 0
	padding 0
	list-style none

.row
	display flex

	.col
		flex 1

.hidden
	display none

label
	display block
	margin-bottom 5px

.main
	padding 20px
	height 100vh
	overflow-y auto

.button-section
		position fixed
		left 0
		right 0
		bottom 0
		height 50px
		text-align center
		padding 10px 10px
		background white
		border-top 1px solid #ccc

	button
		font-size 14px
		padding 8px 15px
		border none
		background linear-gradient(to bottom , green 90%, darken(green, 20%) 100%)
		color white
		border-radius 4px
		letter-spacing 4px
		text-align center
		cursor pointer

		&:active
			background darken(green, 40%)
